                                    <img src={{imagem_do_item}} alt="logomarca">
                                </div>
                                <div class="titulo">
                                    <p>{{titulo}}</p>
                                </div>
                                <div class="descricao">
                                    <p>{{descricao}}</p>
                                </div>
                                <div class="valor">
                                    <p>R$ {{valor}}</p>
                                </div>
                                <div class="adicionar">
                                    <button onclick="travarTela()" type="submit">Adicionar na sacola</button>
                                </div>
                            </div>
                            </form>
                            {{/each}}
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="cervejas">
                            <div class="titulo_prato" >
                                <h1>Cervejas<h1></h1>
                            </div>
                            {{#each cervejas}}
                            <form action="/addbag/{{id}}" method="get">
                            <div class="item">
                                <div class="imagem">
                                    <img src={{imagem_do_item}} alt="logomarca">
