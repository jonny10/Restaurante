                                </div>
                            </div>
                            </form>
                            {{/each}}
                        </div>
                    </div>
                </div>
                <div class="row" id="bebidas">
                    <div class="title_item" >
                        <h1>Bebidas</h1>
                    </div>
                    <div class="col-6">
                        <div class="refrigerantes">
                            <div class="titulo_prato" >
                                <h1>Refrigerante/Suco</h1>
                            </div>
                            {{#each refrigerantes}}
                            <form action="/addbag/{{id}}" method="get">
                            <div class="item">
