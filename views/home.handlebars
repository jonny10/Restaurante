<!--Definindo uma coluna geral para divir em duas partes a tela-->
<div class="row">
<!--a primeira coluna ocupará 12/8 da tela-->
<div class="col-8">
    <!--Dentro dessa primeira coluna teremos os item para pedir-->
    <!--colocando um titulo central dos primeiros item, sendo eles o almoço-->
    <div class="titulo_prato" id="almoco">
        <h1>Pratos de hoje</h1>
    </div>
    <!--Definindo uma coluna para os itens-->
    <div class="row">
        <!--Organizando em uma divisão o grupo de itens-->
        <div class="pratos">
            <!--Uma formatação geral de como ficará os itens trazidos do banco de dados-->
            {{#each almoco}}
            <div class="item">
                {{#each this}}
                <div class="infos{{titulo}}_{{tamanho}}">
                    <!--Uma imagem do item-->
                    <div class="imagem">
                        <img src={{imagem_do_item}} alt="logomarca">
                    </div>
                    <!--Um titulo para o item-->
                    <div class="titulo">
                        <p>{{titulo}}</p>
                    </div>
                    <!--A descrição do item-->
                    <div class="descricao">
                        <p>{{descricao}}</p>
                    </div>
                    <!--O valor do item-->
                    <div class="valor">
                        <p>R$ {{valor}}</p>
                    </div>
                </div>
                {{/each}}
                <form action="/" method="get">
                <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                    <input type="radio" class="btn-check" name="btnradio{{titulo}}" id="btnradio1" value="infos{{titulo}}_{{tamanho}}" autocomplete="off" checked>
                    <label class="btn btn-outline-light mb-3" for="btnradio1{{id}}">P</label>

                    <input type="radio" class="btn-check" name="btnradio{{titulo}}" id="btnradio2" value="infos{{titulo}}_{{tamanho}}" autocomplete="off">
                    <label class="btn btn-outline-light mb-3" for="btnradio2{{id}}">M</label>

                    <input type="radio" class="btn-check" name="btnradio{{titulo}}" id="btnradio3" value="infos{{titulo}}_{{tamanho}}" autocomplete="off">
                    <label class="btn btn-outline-light mb-3" for="btnradio3{{id}}">G</label>
                </div>
                </form>
                <div class="adicionar">
                    <button>Adicionar na sacola</button>
                </div>
                
            </div>
            {{/each}}
        </div>
        <!--Separando os demais items do almoço pois teão uma formatação diferente de duas colunas-->
        <div class="items">
            <!--Definindo uma coluna para separar dois tipos de itens-->
            <div class="row">
                <!--Colocando um titulo geral para esse grupo de itens-->
                <div class="title_item" >
                    <h1>Doces</h1>
                </div>
                <!--Divindo metade da coluna para colocar os itens do tipo doce-->
                <div class="col-6">
                    <!--Organizando uma divisão para esse tipo de iten-->
                    <div class="doces">
                        <!--Definindo o titulo do tipo desses itens-->
                        <div class="titulo_prato" >
                            <h1>Doces<h1></h1>
                        </div>
                        <!--Usando novamente a formatação para apresentar o item do banco de dados-->
                        {{#each doces}}
                        <div class="item">
                            <div class="imagem">
                                <img src={{imagem_do_item}} alt="logomarca">
                            </div>
                            <div class="titulo">
                                <p>{{titulo}}</p>
                            </div>
                            <div class="descricao">
                                <p>{{descricao}}</p>
                            </div>
                            <div class="valor">
                                <p>R$ {{valor}}</p>
                            </div>
                            <div class="adicionar">
                                <button>Adicionar na sacola</button>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <!--Utilizando a outra metade da coluna para colocar outro tipo de itens-->
                <div class="col-6">
                    <!--Organizando uma divisão para esse tipo de iten-->
                    <div class="salgados">
                        <!--Definindo o titulo do tipo desses itens-->
                        <div class="titulo_prato" >
                            <h1>Salgados</h1>
                        </div>
                        <!--Usando novamente a formatação para apresentar o item do banco de dados-->
                        {{#each salgados}}
