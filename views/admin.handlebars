<div class="admin">
    <h2>Items</h2>
    <div class="add">
        <a href="/admin/adicionar-item">Adicionar Item</a>
        <a href="#cronograma">Alterar cronograma</a>
    </div>
    <div class="mostrar_item">
        <div>
            <p>ID</p>
        </div>
        <div>
            <p>nome</p>
        </div>
        <div>
            <p>Descrição</p>
        </div>
        <div>
            <p>imagem</p>
        </div>
        <div>
            <p>Tipo</p>
        </div>
        <div>
            <p>Tamanho</p>
        </div>
        <div>
            <p>Valor</p>
        </div>
        <div class="editar">
            <p>Editar</p>
        </div>
    </div>
    {{#each produtos}}
    <div class="mostrar_item">
        <div>
            <p>{{id}}</p>
        </div>
        <div>
            <p>{{titulo}}</p>
        </div>
        <div>
            <p>{{descricao}}</p>
        </div>
        <div>
            <img width="200px" src={{imagem_do_item}} alt="imagem_do_{{titulo}}">
        </div>
        <div>
            <p>{{tipo_id}}</p>
        </div>
        <div>
            <p>{{tamanho.tamanho}}</p>
        </div>
        <div>
            <p>{{valor}}</p>
        </div>
        <div class="editar">
            <form method="get" action="/admin/apagar-item/{{id}}">
                <button type="submit">Apagar</button>
            </form>
            <form method="get" action="/admin/editar-item/{{id}}">
                <button type="submit">Editar</button>
            </form>
        </div>
    </div>
    {{/each}}
    <div id="cronograma">
        <h2>Cronograma</h2>
        <a href="#">Voltar ao inicio</a>
        <div class="container text-start">
            <h1 class="display-1 text-center mb-5">Alterar cronograma</h1>
            <div class="row justify-content-md-center">
                <div class="card text-bg-dark" style="width: 50%; padding: 1.5rem; border: 0.2rem solid white; border-radius: 2rem; ">
                    <form action="/admin/form-item" enctype="multipart/form-data" method="post">
                        <div class="formCronograma">
                            {{#each cronograma}}
                            <div class="input-group flex-nowrap">
                                <span style="font-size: 2rem; margin-bottom: 0;" class="input-group-text" id="addon-wrapping">Segunda-feira</span>
                                <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="text" class="form-control" value="{{segunda}}" aria-label="Username" aria-describedby="addon-wrapping">
                            </div>
                            <div class="input-group flex-nowrap">
                                <span style="font-size: 2rem; margin-bottom: 0;" class="input-group-text" id="addon-wrapping">Terça-feira</span>
                                <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="text" class="form-control" value="{{terca}}" aria-label="Username" aria-describedby="addon-wrapping">
                            </div>
                            <div class="input-group flex-nowrap">
                                <span style="font-size: 2rem; margin-bottom: 0;" class="input-group-text" id="addon-wrapping">Quarta-feira</span>
                                <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="text" class="form-control" value="{{quarta}}" aria-label="Username" aria-describedby="addon-wrapping">
                            </div>
                            <div class="input-group flex-nowrap">
                                <span style="font-size: 2rem; margin-bottom: 0;" class="input-group-text" id="addon-wrapping">Quinta-feira</span>
                                <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="text" class="form-control" value="{{quinta}}" aria-label="Username" aria-describedby="addon-wrapping">
                            </div>
                            <div class="input-group flex-nowrap">
                                <span style="font-size: 2rem; margin-bottom: 0;" class="input-group-text" id="addon-wrapping">Sexta-feira</span>
                                <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="text" class="form-control" value="{{sexta}}" aria-label="Username" aria-describedby="addon-wrapping">
                            </div>
                            <div class="input-group flex-nowrap">
                                <span style="font-size: 2rem; margin-bottom: 0;" class="input-group-text" id="addon-wrapping">Sábado-feira</span>
                                <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="text" class="form-control" value="{{sabado}}" aria-label="Username" aria-describedby="addon-wrapping">
                            </div>
                            <div style="width: 100%; height: 5rem; " class="btn-group" role="group" aria-label="Basic outlined example">
                                <button type="submit" class="btn btn-outline-light" style="font-size: 2rem;">Alterar</button>
                                <button type="reset" class="btn btn-outline-light" style="font-size: 2rem;">Limpar</button>
                            </div>
                            {{/each}}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>