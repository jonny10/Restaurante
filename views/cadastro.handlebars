<div class="container text-start">
    <h1 class="display-1 text-center mb-5">Cadastre-se</h1>
    <div class="row justify-content-md-center">
        <div class="card text-bg-dark" style="width: 50%; padding: 3rem; border: 0.2rem solid white; border-radius: 2rem; ">
            <form  method="post">
                <div class="mb-2">
                    <label style="font-size: 2rem;" for="nome" class="form-label">Nome</label>
                    <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="text" class="form-control" id="nome">
                </div>
                <div class="mb-2">
                    <label style="font-size: 2rem;" for="exampleInputEmail1" class="form-label">Email</label>
                    <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="mb-2">
                    <label style="font-size: 2rem;" for="cep" class="form-label">CEP</label>
                    <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="text" class="form-control" id="cep" required maxlength="9">
                </div>
                <div class="mb-2">
                    <label style="font-size: 2rem;" for="complemento" class="form-label">Complemento</label>
                    <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="text" class="form-control" id="complemento">
                </div>
                <div class="mb-2">
                    <label style="font-size: 2rem;" for="telefone" class="form-label">Telefone</label>
                    <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="tel" class="form-control" id="telefone">
                </div>
                <div class="mb-2">
                    <label  style="font-size: 2rem;" for="exampleInputPassword1" class="form-label">Senha</label>
                    <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="password" class="form-control" id="exampleInputPassword1">
                </div>
                <div style="width: 100%; height: 5rem; " class="btn-group" role="group" aria-label="Basic outlined example">
                    <button type="submit" class="btn btn-outline-light" style="font-size: 2rem;">Cadastrar</button>
                    <button type="reset" class="btn btn-outline-light" style="font-size: 2rem;">Limpar</button>
                </div>
            </form>
        </div>
    </div>
</div>