<!--Página para login dos clientes-->
<!--Divs do bootstrap para criar um card-->
<div class="container text-start">
    <!--Titulo do card-->
    <h1 class="display-1 text-center mb-5">Faça login</h1>
    <div class="row justify-content-md-center">
        <div class="card text-bg-dark" style="width: 50%; padding: 5rem; border: 0.2rem solid white; border-radius: 2rem; ">
            <!--Formulário com as informações do usuario para efetuar o login-->
            <form method="post" action="/realizar-login">
                <!--Divs para separar os inputs e labels de cada informação do usuario para efetuar o login-->
                <!--email do usuario, utilizando o boostrap para personalizar-->
                <div class="mb-5">
                    <label style="font-size: 2rem;" for="exampleInputEmail1" class="form-label">Email</label>
                    <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <!--Senha-->
                <div class="mb-5">
                    <label style="font-size: 2rem;" for="exampleInputPassword1" class="form-label">Senha</label>
                    <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="password" class="form-control" name="senha" id="exampleInputPassword1">
                </div>
                <!--Em breve-->
                <div class="mb-1 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div>
                <!--Botões para enviar o formulário e realizar o login do usuario na plataforma e o outro botão é para ir a página de cadastro, caso não tenha conta-->
                <div style="width: 100%; height: 5rem; " class="btn-group" role="group" aria-label="Basic outlined example">
                    <button type="submit" class="btn btn-outline-light" style="font-size: 2rem;">Entrar</button>
                    <button onclick="window.location.href = '/cadastro'" type="button" class="btn btn-outline-light" style="font-size: 2rem;">Cadastre-se</button>
                </div>
            </form>
        </div>
    </div>
</div>