<div class="container text-start">
    <h1 class="display-1 text-center mb-5">Adicionar Item</h1>
    <div class="row justify-content-md-center">
        <div class="card text-bg-dark" style="width: 50%; padding: 1.5rem; border: 0.2rem solid white; border-radius: 2rem; ">
            <form action="/admin/form-item"  method="post">
                <div class="mb-2">
                    <label style="font-size: 2rem; margin-bottom: 0;" for="nome" class="form-label">Titulo</label>
                    <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="text" class="form-control" name="nome" id="nome">
                </div>
                <div class="mb-2">
                    <label style="font-size: 2rem; margin-bottom: 0;" for="descricao" class="form-label">Descrição</label>
                    <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="text" class="form-control" id="descricao">
                </div>
                <div class="mb-2">
                    <label style="font-size: 2rem; margin-bottom: 0;"  class="form-label">Tipo</label>
                    <select style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" name="tipo" class="form-select" aria-label="Default select example">
                        <option selected>Selecione o tipo do Item</option>
                        <option value="1">Almoço</option>
                        <option value="2">Doces</option>
                        <option value="3">Lanches</option>
                        <option value="4">Salgados</option>
                        <option value="5">Porções</option>
                        <option value="6">Refrigerante/Suco</option>
                        <option value="7">Cerveja</option>
                    </select>
                </div>
                <div class="mb-2">
                    <label style="font-size: 2rem; margin-bottom: 0;" class="form-label">Tamanho</label>
                    <select style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" name="tamanho" class="form-select" aria-label="Default select example">
                        <option selected>Padrão</option>
                        <option value="1">P</option>
                        <option value="2">M</option>
                        <option value="3">G</option>
                    </select>
                </div>
                <div class="mb-2">
                    <label  style="font-size: 2rem; margin-bottom: 0; " for="valor" class="form-label">Valor</label>
                    <input style="font-size: 2rem ; font-family: Arial, Helvetica, sans-serif;" type="number" min="0.01" step="0.01" class="form-control" name="valor" id="valor">
                </div>
                <div class="mb-2">
                    <label  style="font-size: 2rem; margin-bottom: 0;" for="imagem" class="form-label ">Imagem</label>
                    <input style="font-size: 2rem; font-family: Arial, Helvetica, sans-serif;" type="file" class="form-control" name="imagem" id="imagem">
                </div>
                <div style="width: 100%; height: 5rem; " class="btn-group" role="group" aria-label="Basic outlined example">
                    <button type="submit" class="btn btn-outline-light" style="font-size: 2rem;">Adicionar</button>
                    <button type="reset" class="btn btn-outline-light" style="font-size: 2rem;">Limpar</button>
                </div>
            </form>
        </div>
    </div>
</div>